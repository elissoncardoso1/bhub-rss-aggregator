# 閥 CONFIGURAﾃﾃグ DE PRODUﾃﾃグ - Nﾃグ COMMITAR ESTE ARQUIVO
# Copie para .env.production e configure com seus valores reais

# Ambiente
NODE_ENV=production

# 閥 Banco de Dados (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/bhub_prod"

# 閥 NextAuth (CRﾃ控ICO para seguranﾃｧa)
NEXTAUTH_URL="https://bhub.online"
NEXTAUTH_SECRET="chave-super-secreta-32-caracteres-minimo-gerar-com-openssl"

# 閥 APIs Externas
HUGGINGFACE_API_KEY="hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
UNSPLASH_ACCESS_KEY="sua-chave-unsplash-aqui"

# 閥 Monitoramento e Logs
SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxx.ingest.sentry.io/xxxxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxx.ingest.sentry.io/xxxxx"

# 閥 Rate Limiting (Proteﾃｧﾃ｣o contra ataques)
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_BLOCK_DURATION=300000

# 閥 Logs (Produﾃｧﾃ｣o)
LOG_LEVEL="warn"
LOG_FILE_PATH="./logs"
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# 閥 Cache
CACHE_TTL_MS=1800000
CACHE_MAX_SIZE=500

# 閥 Seguranﾃｧa
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# 閥 Performance
ENABLE_COMPRESSION=true
ENABLE_IMAGE_OPTIMIZATION=true
MAX_IMAGE_SIZE=5242880

# 閥 Backup e Retenﾃｧﾃ｣o
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
DATA_RETENTION_DAYS=365

# 閥 Como gerar NEXTAUTH_SECRET seguro:
# openssl rand -base64 32
# ou
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# 閥 Desenvolvimento (Nﾃグ exibir credenciais em produﾃｧﾃ｣o)
SHOW_DEMO_CREDENTIALS=false
