# üî¥ CONFIGURA√á√ÉO DE PRODU√á√ÉO - N√ÉO COMMITAR ESTE ARQUIVO
# Copie para .env.production e configure com seus valores reais

# Ambiente
NODE_ENV=production

# üî¥ Banco de Dados (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/bhub_prod"

# üî¥ NextAuth (CR√çTICO para seguran√ßa)
NEXTAUTH_URL="https://seudominio.com"
NEXTAUTH_SECRET="chave-super-secreta-32-caracteres-minimo-gerar-com-openssl"

# üî¥ APIs Externas
HUGGINGFACE_API_KEY="hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
UNSPLASH_ACCESS_KEY="sua-chave-unsplash-aqui"

# üî¥ Monitoramento e Logs
SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxx.ingest.sentry.io/xxxxx"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxx.ingest.sentry.io/xxxxx"

# üî¥ Rate Limiting (Prote√ß√£o contra ataques)
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_BLOCK_DURATION=300000

# üî¥ Logs (Produ√ß√£o)
LOG_LEVEL="warn"
LOG_FILE_PATH="./logs"
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# üî¥ Cache
CACHE_TTL_MS=1800000
CACHE_MAX_SIZE=500

# üî¥ Seguran√ßa
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# üî¥ Performance
ENABLE_COMPRESSION=true
ENABLE_IMAGE_OPTIMIZATION=true
MAX_IMAGE_SIZE=5242880

# üî¥ Backup e Reten√ß√£o
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
DATA_RETENTION_DAYS=365

