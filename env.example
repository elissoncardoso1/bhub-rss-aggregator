# Database
DATABASE_URL="postgresql://username:password@localhost:5432/bhub_db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# HuggingFace AI
HUGGINGFACE_API_KEY="your-huggingface-api-key-here"

# Sentry (opcional)
